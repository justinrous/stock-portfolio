<main>
    {{#if earnings}}
        <h1>Today's Earnings</h1>
        <div class="table-container">
            <table>
                <thead>
                    <th>Company</th>
                    <th>EPS Estimate</th>
                    <th>EPS Actual</th>
                    <th>Revenue Estimate</th>
                    <th>Revenue Actual</th>
                </thead>
                <tbody>
                    {{#each earnings}}
                        <tr>
                            <td>{{name}} ({{symbol}})</td>
                            {{#if epsEstimate}}
                                <td>{{epsEstimate}}</td>
                            {{else}}
                                <td>N/A</td>
                            {{/if}}
                            {{#if epsActual}}
                                <td>{{epsActual}}</td>
                            {{else}}
                                <td>N/A</td>
                            {{/if}}
                            {{#if revenueEstimate}}
                                <td>{{revenueEstimate}}</td>
                            {{else}}
                                <td>N/A</td>
                            {{/if}}
                            {{#if revenueActual}}
                                <td>{{revenueActual}}</td>
                            {{else}}
                                <td>N/A</td>
                            {{/if}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    {{else}}
        <h1>Today's Earnings</h1>
        <p>No company's reporting earnings today.</p>
    {{/if}}
    </div>


    <script src="./scripts/home.js"></script>
</main>